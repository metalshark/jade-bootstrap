mixin table
    - _addClassAttribute('bordered', 'table-bordered', attributes)
    - _addClassAttribute('condensed', 'table-condensed', attributes)
    - _addClassAttribute('hover', 'table-hover', attributes)
    - _addClassAttribute('striped', 'table-striped', attributes)
    - if (attributes.responsive) {
        - attributes.responsive = null
        .table-responsive
            table.table&attributes(attributes)
                block
    - } else {
        table.table&attributes(attributes)
            block
    - }

mixin td
    - _contextualMeta(attributes)
    td&attributes(attributes)
        block

mixin th
    - _contextualMeta(attributes)
    th&attributes(attributes)
        block

mixin tr
    - _contextualMeta(attributes)
    tr&attributes(attributes)
        block
