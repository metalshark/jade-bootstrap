- function _contextualMeta(attributes) {
-     if (attributes.active) {
-         _addClassAttribute('active', 'active', attributes)
-     } else if (attributes.success) {
-         _addClassAttribute('success', 'success', attributes)
-     } else if (attributes.warning) {
-         _addClassAttribute('warning', 'warning', attributes)
-     } else if (attributes.danger) {
-         _addClassAttribute('danger', 'danger', attributes)
-     }
//- Sanity check
-     if (attributes.active || attributes.success || attributes.warning || attributes.danger) {
